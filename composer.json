{
    "name": "laterpay/laterpay-wordpress-plugin",
    "description": "This is the official LaterPay plugin for selling digital content with WordPress",
    "license": "MIT",
    "config": {
        "vendor-dir": "laterpay/vendor"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "laterpay/laterpay-php-browscap-library",
                "version": "1.0",
                "dist": {
                    "url": "https://github.com/laterpay/laterpay-php-browscap-library/archive/develop.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "laterpay/laterpay-client-php",
                "version": "1.0",
                "dist": {
                    "url": "https://github.com/laterpay/laterpay-client-php/archive/develop.zip",
                    "type": "zip"
                }
            }
        },
        {
            "type": "package",
            "package": {
                "name": "wp-coding-standards/wpcs",
                "version": "1.0",
                "dist": {
                    "url": "https://github.com/WordPress-Coding-Standards/WordPress-Coding-Standards/archive/9c4de8175ce1f82813f8c9c8f11809ee6c794efc.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "require": {
        "laterpay/laterpay-php-browscap-library": "1.0",
        "laterpay/laterpay-client-php": "1.0"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "1.0"
    },
    "scripts": {
        "phpcs": "\"laterpay/vendor/bin/phpcs\" -s -n -p --standard=ruleset.xml --extensions=php --ignore=laterpay/vendor/*,laterpay/cache/*,laterpay/languages/* laterpay",
        "phpcbf": "\"laterpay/vendor/bin/phpcbf\" --no-patch --standard=ruleset.xml --extensions=php --ignore=laterpay/vendor/*,laterpay/cache/*,laterpay/languages/* laterpay",
        "wpcs": "\"laterpay/vendor/bin/phpcs\" --config-set installed_paths laterpay/vendor/wp-coding-standards/wpcs"
    }
}

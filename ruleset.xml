<?xml version="1.0"?>
<ruleset name="LaterPay">
    <description>A custom set of rules to check for a LaterPay WordPress plugin based on PSR2</description>

    <rule ref="Internal.Tokenizer.Exception">
        <severity>0</severity>
    </rule>

    <rule ref="PSR2">
        <exclude-pattern>laterpay/laterpay.php</exclude-pattern>
        <exclude-pattern>laterpay/views/*</exclude-pattern>
        <exclude-pattern>laterpay/vendor/*</exclude-pattern>
        <exclude-pattern>*.js</exclude-pattern>
        <exclude-pattern>*.css</exclude-pattern>
    </rule>
</ruleset>